{
  "compilerOptions": {
    "strict": false,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "outDir": "lib",
    "baseUrl": ".",
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "scripts",
    "lib"
  ],
  "include": [
    "src"
  ],
  "compileOnSave": true,
}